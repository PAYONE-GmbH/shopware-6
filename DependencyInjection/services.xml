<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="payone_payment.payment_handler.payone_credit_card_payment_handler" class="PayonePayment\PaymentHandler\PayoneCreditCardPaymentHandler">
            <argument type="service" id="order_transaction.repository"/>

            <tag name="payment.method"/>
        </service>

        <service id="payone_payment.payment_handler.payone_debit_payment_handler" class="PayonePayment\PaymentHandler\PayoneDebitPaymentHandler">
            <argument type="service" id="order_transaction.repository"/>

            <tag name="payment.method"/>
        </service>

        <service id="payone_payment.payment_handler.payone_paypal_payment_handler" class="PayonePayment\PaymentHandler\PayonePaypalPaymentHandler">
            <argument type="service" id="order_transaction.repository"/>

            <tag name="payment.method"/>
        </service>

        <service id="payone_payment.payment_handler.payone_sofort_payment_handler" class="PayonePayment\PaymentHandler\PayoneSofortPaymentHandler">
            <argument type="service" id="order_transaction.repository"/>

            <tag name="payment.method"/>
        </service>

        <service id="payone_payment.console.test_command" class="PayonePayment\Console\TestCommand" >
            <tag name="console.command"/>
        </service>
    </services>
</container>
