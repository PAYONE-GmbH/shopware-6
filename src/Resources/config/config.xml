<?xml version="1.0" encoding="UTF-8" ?>
<config>
    <card>
        <title>Basic configuration</title>
        <title lang="de-DE">Grundeinstellungen</title>

        <input-field>
            <name>merchantId</name>
            <copyable>true</copyable>
            <label>Merchant ID</label>
        </input-field>

        <input-field>
            <name>accountId</name>
            <copyable>true</copyable>
            <label>Account ID</label>
        </input-field>

        <input-field>
            <name>portalId</name>
            <copyable>true</copyable>
            <label>Portal ID</label>
        </input-field>

        <input-field>
            <name>portalKey</name>
            <copyable>true</copyable>
            <label>Key</label>
        </input-field>

        <input-field type="single-select">
            <name>transactionMode</name>
            <label>Live or Testmode</label>
            <label lang="de-DE">Live- / Testbetrieb</label>
            <options>
                <option>
                    <id>test</id>
                    <name>Test mode</name>
                    <name lang="de-DE">Test Modus</name>
                </option>
                <option>
                    <id>live</id>
                    <name>Live mode</name>
                    <name lang="de-DE">Live Modus</name>
                </option>
            </options>
        </input-field>

        <input-field>
            <name>ordernumberPrefix</name>
            <copyable>true</copyable>
            <label>Ordernumber prefix</label>
            <label lang="de-DE">Prefix f√ºr Auftragsnummern</label>
            <helpText>If this option is not empty, the specified value will be added in front of the ordernumber reported to Payone. </helpText>
            <helpText lang="de-DE">Wenn dieser Wert nicht leer ist ist, wird der Wert vor die Auftragsnummer gesetzt, die an Payone gemeldet wird.</helpText>
        </input-field>
    </card>
</config>