<?xml version="1.0" encoding="UTF-8" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="PayonePayment\PaymentHandler\PaymentHandlerPayExecutor">
            <argument type="service" id="PayonePayment\Components\ConfigReader\ConfigReaderInterface" />
            <argument type="service" id="PayonePayment\Service\OrderTransactionLoaderService" />
            <argument type="service" id="translator" />
            <argument type="service" id="PayonePayment\Service\CustomerDataPersistorService" />
            <argument type="service" id="order_transaction.repository" />
            <argument type="service" id="PayonePayment\RequestParameter\PaymentRequestEnricher" />
            <argument type="service" id="Shopware\Core\System\SalesChannel\Context\SalesChannelContextRestorer" />
            <argument type="service" id="PayonePayment\Payone\Client\PayoneClient" />
            <argument type="service" id="PayonePayment\DataHandler\OrderActionLogDataHandler" />
            <argument type="service" id="Shopware\Core\Checkout\Cart\SalesChannel\CartService" />
        </service>

        <service id="PayonePayment\Service\PaymentStateHandlerService">
            <argument type="service" id="translator" />
        </service>

        <service id="PayonePayment\Components\TransactionHandler\Refund\RefundTransactionHandler">
            <argument type="service" id="PayonePayment\Payone\RequestParameter\RequestParameterFactory" />
            <argument type="service" id="PayonePayment\Payone\Client\PayoneClient" />
            <argument type="service" id="PayonePayment\DataHandler\TransactionDataHandler" />
            <argument type="service" id="PayonePayment\DataHandler\OrderActionLogDataHandler" />
            <argument type="service" id="PayonePayment\Components\TransactionStatus\TransactionStatusService" />
            <argument type="service" id="order_transaction.repository" />
            <argument type="service" id="order_line_item.repository" />
            <argument type="service" id="PayonePayment\Service\CurrencyPrecisionService" />
        </service>

        <service id="PayonePayment\Components\TransactionHandler\Capture\CaptureTransactionHandler">
            <argument type="service" id="PayonePayment\Payone\RequestParameter\RequestParameterFactory" />
            <argument type="service" id="PayonePayment\Payone\Client\PayoneClient" />
            <argument type="service" id="PayonePayment\DataHandler\TransactionDataHandler" />
            <argument type="service" id="PayonePayment\DataHandler\OrderActionLogDataHandler" />
            <argument type="service" id="PayonePayment\Components\TransactionStatus\TransactionStatusService" />
            <argument type="service" id="order_transaction.repository" />
            <argument type="service" id="order_line_item.repository" />
            <argument type="service" id="PayonePayment\Service\CurrencyPrecisionService" />
        </service>

        <service id="PayonePayment\Components\RedirectHandler\RedirectHandler">
            <argument type="service" id="Doctrine\DBAL\Connection" />
            <argument type="service" id="Shopware\Storefront\Framework\Routing\Router" />
            <argument>%env.app_secret%</argument>
        </service>

        <service id="PayonePayment\DataHandler\TransactionDataHandler">
            <argument type="service" id="order_transaction.repository" />
            <argument type="service" id="PayonePayment\Service\CurrencyPrecisionService" />
        </service>

        <service id="PayonePayment\DataHandler\OrderActionLogDataHandler">
            <argument type="service" id="payone_payment_order_action_log.repository" />
            <argument type="service" id="monolog.logger.payone" />
        </service>

        <service id="PayonePayment\DataHandler\WebhookLogDataHandler">
            <argument type="service" id="payone_payment_webhook_log.repository" />
            <argument type="service" id="monolog.logger.payone" />
        </service>
    </services>
</container>
