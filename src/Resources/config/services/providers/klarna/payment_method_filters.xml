<?xml version="1.0" encoding="UTF-8" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service
            id="payone.payment_filter_method.klarna.direct_debit"
            class="PayonePayment\Provider\Klarna\PaymentFilter\KlarnaPaymentMethodFilter"
        >
            <argument key="$systemConfigService" type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument key="$paymentHandlerClass">PayonePayment\Provider\Klarna\PaymentHandler\DirectDebitPaymentHandler</argument>
            <argument key="$configReader" type="service" id="PayonePayment\Components\ConfigReader\ConfigReader" />
            <argument key="$extensionService" type="service" id="PayonePayment\Components\GenericExpressCheckout\CartExtensionService" />

            <argument key="$allowedCountries" type="collection">
                <argument>AT</argument>
                <argument>CH</argument>
                <argument>DE</argument>
                <argument>DK</argument>
                <argument>Fi</argument>
                <argument>NL</argument>
                <argument>NO</argument>
                <argument>SE</argument>
            </argument>

            <argument key="$allowedB2bCountries" type="collection">
                <argument>Fi</argument>
                <argument>DE</argument>
                <argument>NO</argument>
                <argument>SE</argument>
            </argument>

            <argument key="$allowedCurrencies" type="collection">
                <argument>EUR</argument>
                <argument>CHF</argument>
                <argument>DKK</argument>
                <argument>NOK</argument>
                <argument>SEK</argument>
            </argument>

            <tag name="payone.payment_method.filter" />
        </service>

        <service
            id="payone.payment_filter_method.klarna.installment"
            class="PayonePayment\Provider\Klarna\PaymentFilter\KlarnaPaymentMethodFilter"
        >
            <argument key="$systemConfigService" type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument key="$paymentHandlerClass">PayonePayment\Provider\Klarna\PaymentHandler\InstallmentPaymentHandler</argument>
            <argument key="$configReader" type="service" id="PayonePayment\Components\ConfigReader\ConfigReader" />
            <argument key="$extensionService" type="service" id="PayonePayment\Components\GenericExpressCheckout\CartExtensionService" />

            <argument key="$allowedCountries" type="collection">
                <argument>AT</argument>
                <argument>CH</argument>
                <argument>DE</argument>
                <argument>DK</argument>
                <argument>Fi</argument>
                <argument>NL</argument>
                <argument>NO</argument>
                <argument>SE</argument>
            </argument>

            <argument key="$allowedB2bCountries" type="collection">
                <argument>Fi</argument>
                <argument>DE</argument>
                <argument>NO</argument>
                <argument>SE</argument>
            </argument>

            <argument key="$allowedCurrencies" type="collection">
                <argument>EUR</argument>
                <argument>CHF</argument>
                <argument>DKK</argument>
                <argument>NOK</argument>
                <argument>SEK</argument>
            </argument>

            <tag name="payone.payment_method.filter" />
        </service>

        <service
            id="payone.payment_filter_method.klarna.invoice"
            class="PayonePayment\Provider\Klarna\PaymentFilter\KlarnaPaymentMethodFilter"
        >
            <argument key="$systemConfigService" type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument key="$paymentHandlerClass">PayonePayment\Provider\Klarna\PaymentHandler\InvoicePaymentHandler</argument>
            <argument key="$configReader" type="service" id="PayonePayment\Components\ConfigReader\ConfigReader" />
            <argument key="$extensionService" type="service" id="PayonePayment\Components\GenericExpressCheckout\CartExtensionService" />

            <argument key="$allowedCountries" type="collection">
                <argument>AT</argument>
                <argument>CH</argument>
                <argument>DE</argument>
                <argument>DK</argument>
                <argument>Fi</argument>
                <argument>NL</argument>
                <argument>NO</argument>
                <argument>SE</argument>
            </argument>

            <argument key="$allowedB2bCountries" type="collection">
                <argument>Fi</argument>
                <argument>DE</argument>
                <argument>NO</argument>
                <argument>SE</argument>
            </argument>

            <argument key="$allowedCurrencies" type="collection">
                <argument>EUR</argument>
                <argument>CHF</argument>
                <argument>DKK</argument>
                <argument>NOK</argument>
                <argument>SEK</argument>
            </argument>

            <tag name="payone.payment_method.filter" />
        </service>
    </services>
</container>
