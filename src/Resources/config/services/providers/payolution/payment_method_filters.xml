<?xml version="1.0" encoding="UTF-8" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service
            id="payone.payment_filter_method.payolution.debit"
            class="PayonePayment\Provider\Payolution\PaymentFilter\PayolutionPaymentMethodFilter"
        >
            <argument key="$systemConfigService" type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument key="$paymentHandlerClass">PayonePayment\Provider\Payolution\PaymentHandler\DebitPaymentHandler</argument>
            <argument key="$configReader" type="service" id="PayonePayment\Components\ConfigReader\ConfigReader" />
            <argument key="$extensionService" type="service" id="PayonePayment\Components\GenericExpressCheckout\CartExtensionService" />

            <tag name="payone.payment_method.filter" />
        </service>

        <service
            id="payone.payment_filter_method.payolution.installment"
            class="PayonePayment\Provider\Payolution\PaymentFilter\PayolutionPaymentMethodFilter"
        >
            <argument key="$systemConfigService" type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument key="$paymentHandlerClass">PayonePayment\Provider\Payolution\PaymentHandler\InstallmentPaymentHandler</argument>
            <argument key="$configReader" type="service" id="PayonePayment\Components\ConfigReader\ConfigReader" />
            <argument key="$extensionService" type="service" id="PayonePayment\Components\GenericExpressCheckout\CartExtensionService" />

            <tag name="payone.payment_method.filter" />
        </service>

        <service
            id="payone.payment_filter_method.payolution.invoice"
            class="PayonePayment\Provider\Payolution\PaymentFilter\PayolutionPaymentMethodFilter"
        >
            <argument key="$systemConfigService" type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument key="$paymentHandlerClass">PayonePayment\Provider\Payolution\PaymentHandler\InvoicePaymentHandler</argument>
            <argument key="$configReader" type="service" id="PayonePayment\Components\ConfigReader\ConfigReader" />
            <argument key="$extensionService" type="service" id="PayonePayment\Components\GenericExpressCheckout\CartExtensionService" />

            <tag name="payone.payment_method.filter" />
        </service>
    </services>
</container>
