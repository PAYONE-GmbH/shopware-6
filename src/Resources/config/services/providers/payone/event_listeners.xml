<?xml version="1.0" encoding="UTF-8" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="PayonePayment\Provider\Payone\EventListener\CheckoutConfirmCreditCardEventListener">
            <argument type="service" id="PayonePayment\RequestParameter\PaymentRequestEnricher" />
            <argument type="service" id="payone.request_enricher_chain.check.payone.credit_card" />
            <argument type="service" id="PayonePayment\Provider\Payone\PaymentHandler\CreditCardPaymentHandler" />
            <argument type="service" id="language.repository" />
            <argument type="service" id="PayonePayment\StoreApi\Route\CardRoute" />

            <tag name="kernel.event_subscriber" />
        </service>

        <service id="PayonePayment\Provider\Payone\EventListener\CheckoutConfirmSecuredInstallmentEventListener">
            <argument type="service" id="PayonePayment\Provider\Payone\Service\SecuredInstallmentService" />

            <tag name="kernel.event_subscriber" />
        </service>

        <service id="PayonePayment\Provider\Payone\EventListener\InvoiceRendererEventListener">
            <argument type="service" id="PayonePayment\Components\ConfigReader\ConfigReaderInterface" />

            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
