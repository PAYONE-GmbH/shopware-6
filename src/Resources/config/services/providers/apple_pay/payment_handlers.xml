<?xml version="1.0" encoding="UTF-8" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="PayonePayment\Provider\ApplePay\PaymentHandler\PaymentHandlerPayExecutor">
            <argument type="service" id="PayonePayment\Components\ConfigReader\ConfigReaderInterface" />
            <argument type="service" id="translator" />
            <argument type="service" id="order_transaction.repository" />
            <argument type="service" id="Shopware\Core\System\SalesChannel\Context\SalesChannelContextRestorer" />
            <argument type="service" id="PayonePayment\DataHandler\OrderActionLogDataHandler" />
        </service>

        <service id="PayonePayment\Provider\ApplePay\ResponseHandler\StandardResponseHandler">
            <argument type="service" id="translator" />
            <argument type="service" id="PayonePayment\DataHandler\TransactionDataHandler" />
        </service>

        <service id="PayonePayment\Provider\ApplePay\PaymentHandler\StandardPaymentHandler">
            <argument type="service" id="PayonePayment\Provider\ApplePay\PaymentHandler\PaymentHandlerPayExecutor" />
            <argument type="service" id="PayonePayment\Provider\ApplePay\ResponseHandler\StandardResponseHandler" />
            <argument type="service" id="payone.request_enricher_chain.pay.apple_pay.standard" />

            <tag name="shopware.payment.method" />
        </service>
    </services>
</container>
