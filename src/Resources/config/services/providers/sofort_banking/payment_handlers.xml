<?xml version="1.0" encoding="UTF-8" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="PayonePayment\Provider\SofortBanking\ResponseHandler\StandardResponseHandler">
            <argument type="service" id="translator" />
            <argument type="service" id="PayonePayment\DataHandler\TransactionDataHandler" />
        </service>

        <service id="PayonePayment\Provider\SofortBanking\PaymentHandler\StandardPaymentHandler">
            <argument type="service" id="PayonePayment\PaymentHandler\PaymentHandlerPayExecutor" />
            <argument type="service" id="PayonePayment\Provider\SofortBanking\ResponseHandler\StandardResponseHandler" />
            <argument type="service" id="PayonePayment\Service\PaymentStateHandlerService" />
            <argument type="service" id="payone.request_enricher_chain.pay.sofort_banking.standard" />

            <tag name="shopware.payment.method" />
        </service>
    </services>
</container>
