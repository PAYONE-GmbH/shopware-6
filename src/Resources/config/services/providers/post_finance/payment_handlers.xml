<?xml version="1.0" encoding="UTF-8" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="PayonePayment\Provider\PostFinance\ResponseHandler\CardResponseHandler">
            <argument type="service" id="translator" />
            <argument type="service" id="PayonePayment\DataHandler\TransactionDataHandler" />
        </service>

        <service id="PayonePayment\Provider\PostFinance\PaymentHandler\CardPaymentHandler">
            <argument type="service" id="PayonePayment\PaymentHandler\PaymentHandlerPayExecutor" />
            <argument type="service" id="PayonePayment\Provider\PostFinance\ResponseHandler\CardResponseHandler" />
            <argument type="service" id="PayonePayment\Service\PaymentStateHandlerService" />
            <argument type="service" id="payone.request_enricher_chain.pay.post_finance.card" />

            <tag name="shopware.payment.method" />
        </service>

        <service id="PayonePayment\Provider\PostFinance\ResponseHandler\WalletResponseHandler">
            <argument type="service" id="translator" />
            <argument type="service" id="PayonePayment\DataHandler\TransactionDataHandler" />
        </service>

        <service id="PayonePayment\Provider\PostFinance\PaymentHandler\WalletPaymentHandler">
            <argument type="service" id="PayonePayment\PaymentHandler\PaymentHandlerPayExecutor" />
            <argument type="service" id="PayonePayment\Provider\PostFinance\ResponseHandler\WalletResponseHandler" />
            <argument type="service" id="PayonePayment\Service\PaymentStateHandlerService" />
            <argument type="service" id="payone.request_enricher_chain.pay.post_finance.wallet" />

            <tag name="shopware.payment.method" />
        </service>
    </services>
</container>
