{% block sw_order_detail_delivery_metadata %}
    {% parent %}

    <sw-card v-if="!isLoading" :title="$tc('payone-order-buttons.title')" :isLoading="isLoading">
        <sw-container columns="1fr 1fr" gap="30px">
            <sw-button class="sw-settings-customer-group-detail__cancel" @click="captureOrder(currentOrder)">
                {{ $tc('payone-order-buttons.capture') }}
            </sw-button>

            <sw-button class="sw-settings-customer-group-detail__cancel" @click="refundOrder(currentOrder)">
                {{ $tc('payone-order-buttons.refund') }}
            </sw-button>
        </sw-container>
    </sw-card>
{% endblock %}
