{% sw_extends '@Storefront/page/account/sidebar.html.twig' %}

{% block page_account_sidebar_menu_inner %}
    {{ parent() }}

    {% block page_account_sidebar_link_payone_card %}
        {% set css_class %}
            list-group-item
            list-group-item-action
            account-aside-item

            {% if controllerName is same as('AccountCard') and controllerAction is same as('cardOverview') %}
                is-active
            {% endif %}
        {% endset %}

        <a href="{{ path('frontend.account.payone.card.page') }}" title="{{ "PayonePayment.cardPage.menuName" | trans }}" class="{{ css_class }}">
            {{ "PayonePayment.cardPage.menuName" | trans }}
        </a>
    {% endblock %}
{% endblock %}