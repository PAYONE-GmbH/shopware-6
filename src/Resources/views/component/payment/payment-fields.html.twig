{% sw_extends '@Storefront/component/payment/payment-fields.html.twig' %}

{# @var payment \Shopware\Core\Checkout\Payment\PaymentMethodEntity #}

{% block component_payment_fieldset_template %}
    {{ parent() }}

    {% if payment.id is same as(defaultPaymentMethodId) %}
        {% if payment.id == constant('PayonePayment\\PaymentMethod\\PayonePaypal::UUID') %}
            <!-- payone paypal -->
        {% endif %}

        {% if payment.id == constant('PayonePayment\\PaymentMethod\\PayoneCreditCard::UUID') %}
            {% sw_include '@Storefront/payone/form/credit-card-form.html.twig' %}
        {% endif %}

        {% if payment.id == constant('PayonePayment\\PaymentMethod\\PayoneSofortBanking::UUID') %}
            <!-- payone sofort -->
        {% endif %}

        {% if payment.id == constant('PayonePayment\\PaymentMethod\\PayoneDebit::UUID') %}
            {% sw_include '@Storefront/payone/form/debit-form.html.twig' %}
        {% endif %}
    {% endif %}
{% endblock %}
