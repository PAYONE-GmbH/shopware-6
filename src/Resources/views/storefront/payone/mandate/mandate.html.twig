{% block mandate_form %}
    <div class="payone-payment debit-card mandate">
        <div class="card">
            <div class="row">
                <div class="col-md-12">
                    {{ mandate.HtmlText | raw }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="accept-mandate" name="accept-mandate" value="1">

                        <label class="form-label custom-control-label" for="accept-mandate">{{ "PayonePayment.mandateModal.question" | trans }}</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mandate-button">
                    <button type="button" class="modal-close btn btn-secondary btn-block btn-lg" data-dismiss="modal" aria-label="{{ "PayonePayment.mandateModal.cancel" | trans }}">
                        {{ "PayonePayment.mandateModal.cancel" | trans }}
                    </button>
                </div>

                <div class="col-md-6 mandate-button">
                    <button id="mandateSubmit" class="modal-close btn btn-primary btn-block btn-lg" data-dismiss="modal" aria-label="{{ "PayonePayment.mandateModal.submit" | trans }}">
                        {{ "PayonePayment.mandateModal.confirm" | trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
