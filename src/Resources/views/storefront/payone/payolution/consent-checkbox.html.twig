{% block payone_payolution_consent_checkbox %}

    {% if context.customer.activeBillingAddress and context.customer.activeBillingAddress.company is empty %}
        {% sw_include '@PayonePayment/storefront/payone/birthday-input.html.twig' %}
    {% endif %}

    <div class="row consent-row">
        <div class="col-12">
            <div class="custom-control custom-checkbox">
                <input
                    type="checkbox"
                    class="custom-control-input{% if formViolations.getViolations('/payolutionConsent') is not empty %} is-invalid{% endif %}"
                    id="payolutionConsent"
                    form="confirmOrderForm"
                    name="payolutionConsent"
                    required="required"
                />

                <label for="payolutionConsent" class="form-label custom-control-label consent-label">
                    {{ "PayonePayment.payolution.consentCheckbox.introduction" | trans }}
                    {{ "PayonePayment.payolution.consentCheckbox.textWithLink" | trans({
                        '%link%': path('frontend.account.payone.payolution.consent')
                    }) | raw }}
                </label>
            </div>
        </div>
    </div>
{% endblock %}
