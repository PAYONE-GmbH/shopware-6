{% for element in addpaydata  %}
    <div class="installmentDetail" data-duration="{{ element.Duration }}" {% if not loop.first %}hidden="hidden"{% endif %}>
        <div class="table-responsive">
            <table class="table">
                <tbody>
                    <tr>
                        <td>No. of installments:</td>
                        <td>{{ element.Duration }}</td>
                    </tr>
                    <tr>
                        <td>Financingamount:</td>
                        <td>{{ element.OriginalAmount | currency(element.Currency) }}</td>
                    </tr>
                    <tr>
                        <td>Total:</td>
                        <td>{{ element.TotalAmount | currency(element.Currency) }}</td>
                    </tr>
                    <tr>
                        <td>Nominalzins:</td>
                        <td>{{ element.InterestRate }} %</td>
                    </tr>
                    <tr>
                        <td>Effektivzins:</td>
                        <td>{{ element.EffectiveInterestRate }} %</td>
                    </tr>
                    <tr>
                        <td>Monatliche Rate:</td>
                        <td>{{ element.Installment[0].Amount | currency(element.Currency) }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endfor %}

<div class="form-group">
    <label class="form-label" for="payolutionAccountOwner">Account Owner{{ "general.required" | trans }}</label>
    <input class="form-control" type="text" id="payolutionAccountOwner" name="payolutionAccountOwner" form="confirmOrderForm">
</div>

<div class="form-group">
    <label class="form-label" for="payolutionIban">IBAN{{ "general.required" | trans }}</label>
    <input class="form-control" type="text" id="payolutionIban" name="payolutionIban" form="confirmOrderForm">
</div>

<div class="form-group">
    <label class="form-label" for="payolutionBic">BIC{{ "general.required" | trans }}</label>
    <input class="form-control" type="text" id="payolutionBic" name="payolutionBic" form="confirmOrderForm">
</div>