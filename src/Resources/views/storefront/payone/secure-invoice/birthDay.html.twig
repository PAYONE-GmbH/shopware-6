<div class="row">
    <div class="col-12">
        <label class="form-label" for="payolutionBirthday">
            {{ "PayonePayment.secureInvoice.birthday.label" | trans }}{{ "general.required" | trans }}
        </label>
    </div>

    <div class="{% if style == 'wide'%}col-12{% else %}col-4{% endif %}">
        <input
            type="date"
            id="payoneInvoiceBirthday"
            name="payoneInvoiceBirthday"
            class="form-control{% if formViolations.getViolations('/payoneInvoiceBirthday') is not empty %} is-invalid{% endif %}"
            form="confirmOrderForm"
            required="required"
        />
    </div>
</div>
