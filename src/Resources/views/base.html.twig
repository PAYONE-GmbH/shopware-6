{% sw_extends '@Storefront/base.html.twig' %}

{% block base_script_hmr_mode %}
    {{ parent() }}

    {% if isHMRMode %}
        <script type="text/javascript" src="{{ app.request.server.get('APP_URL') }}:9999/js/payone-payment.js"></script>
    {% else %}
        <script type="text/javascript" src="{{ asset('bundles/payonepayment/storefront/js/payone-payment.js') }}"></script>
    {% endif %}

    <style type="text/css">
        .payone-payment.credit-card .form-control.iframe {
            padding: 0;
            border: 0;
        }

        .payone-payment.credit-card .card-logo-container {
            padding-left: 10px;
        }

        .payone-payment.credit-card #card-logo {
            display: block;
            height: calc(1.5em + 1.25rem);
            border: 1px solid transparent;
            margin: 0 auto;
        }

        .payone-payment.credit-card .alert {
            margin: 0;
        }

        .payone-debit-mandate-modal .modal-body {
            padding: 0;
        }
    </style>
{% endblock %}