{% block payone_payment_details %}
    <div class="payone-order-items">
        <payone-data-grid
            :dataSource="orderItems"
            :columns="orderItemColumns"
            :showActions="false"
            :showSelection="true"
            v-on:select-item="onSelectItem">

            <template #column-product="{ item, isInlineEdit }">
                {{ item.product }}
            </template>

            <template #column-price="{ item, isInlineEdit }">
                {{ item.price }}
            </template>

            <template #column-quantity="{ item, isInlineEdit }">
                <sw-field
                    :value="item.quantity"
                    type="number"
                    :min="0"
                    :disabled="item.disabled"
                    :max="item.quantity"
                    slot="inline-edit"
                    size="small"
                    placeholder=0
                    v-on:change="onChangeQuantity($event, item.id)">
                </sw-field>
            </template>
        </payone-data-grid>
    </div>
{% endblock %}
