<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="webhook.xml"/>
        <import resource="commands.xml" />
        <import resource="entities.xml" />
        <import resource="handlers.xml" />
        <import resource="requests.xml" />
        <import resource="translations.xml" />
    </imports>

    <services>
        <service id="PayonePayment\Components\ConfigReader\ConfigReader">
            <argument type="service" id="payone_payment_config.repository" />
        </service>

        <service id="PayonePayment\Components\ConfigWriter\ConfigWriter">
            <argument type="service" id="payone_payment_config.repository" />
        </service>

        <service id="PayonePayment\Payone\Request\RequestFactory">
            <argument type="service" id="service_container" />
        </service>

        <service id="PayonePayment\Components\RefundHandler\RefundHandler">
            <argument type="service" id="PayonePayment\Payone\Request\RequestFactory" />
            <argument type="service" id="PayonePayment\Payone\Client\PayoneClient" />
        </service>

        <service id="PayonePayment\Payone\Client\PayoneClient">
            <argument type="service" id="logger" />
        </service>

        <service id="PayonePayment\Components\TransactionStatus\TransactionStatusService">
            <argument type="service" id="payone_payment_status.repository"/>
            <argument type="service" id="order_transaction.repository"/>
            <argument type="service" id="state_machine_state.repository"/>
        </service>
    </services>
</container>
