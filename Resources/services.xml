<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="commands.xml" />
        <import resource="entities.xml" />
        <import resource="controllers.xml" />
        <import resource="handlers.xml" />
    </imports>

    <services>
        <service id="PayonePayment\ConfigReader\ConfigReader">
            <argument type="service" id="payone_payment_config.repository" />
        </service>

        <service id="PayonePayment\ConfigWriter\ConfigWriter">
            <argument type="service" id="payone_payment_config.repository" />
        </service>
    </services>
</container>
